<script>
    
    window.onload = loadPage();

    function loadPage(){
        fetch(`<%= url %>:<%= port %>/api/getPage/${location.pathname.substring(location.pathname.lastIndexOf('/') + 1)}`, {
            method:'POST',
            credentials: 'include'
        }).then(res => populatePage(res))
    }

    async function populatePage(res){
        let result = await res.json();
        document.getElementById("pageContent").innerHTML =  result[0].content;
    }

    function savePage(contentTarget,formContent,preview){
        let content = document.getElementById(contentTarget).innerHTML;
        let id = location.pathname.substring(location.pathname.lastIndexOf('/') + 1);

        document.getElementById("pageContent").innerHTML += content;

        fetch('<%= url %>:<%= port %>/api/editPage', {
                method:'POST',
                headers: {
                    "Content-Type": "application/json"
                },
                credentials: 'include',
                body:JSON.stringify({page_id:id, title:"",data:document.getElementById("pageContent").innerHTML})
                
            })

      clearFormPre(formContent,contentTarget);
      

    }

    function clearForm(formContent,previewContent){
      document.getElementById(formContent).reset();
      for (let i = 0; i < previewContent.length; i++){
        document.getElementById(previewContent[i]).innerHTML = "";
      }
      
    }

    function updateText(target,textIn){
        document.getElementById(target).innerText = textIn
    }

</script>


</html>