<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/sidebar.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="page-container">
            <div class="content-wrap">
                <div class="row">
                    <%- include('../navbar.ejs'); %>
                </div>
                <div class="row">
                    <div class="col-2">
                        <%- include('../sidebar.ejs'); %>
                    </div>
                    <div class="col-8">
                        <a href="/dashboard/addPost" class="btn btn-primary" role="button">Add a New Post</a>
                        <table class = "table">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Date Created</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% for (var i = 0; i < posts.length; i++){ %>
                                <tr>
                                    <th scope="row"><%= posts[i].article_title %></th>
                                    <td><%= posts[i].category %></td>
                                    <td><%= posts[i].date_created %></td>
                                    <td><a href="/dashboard/editPost/<%= posts[i]._id %>"><i class="fa fa-edit"></i></button></a></td>
                                    <td><a href="#" onclick="deletePost('<%= posts[i]._id %>',this)"><i class="fa fa-trash"></i></button></a></td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                        <p id = "status"></p>
                    </div>
                </div>
            </div>
        </div>
        
        

        
    </body>

    <script>
        window.onload = expandSidebar();
        

        function expandSidebar(){
            document.getElementById("websiteSidebar").setAttribute('aria-expanded',true);
            document.getElementById("websiteSidebar").setAttribute('class','dropdown-toggle');
            document.getElementById("websiteSubmenu").setAttribute('class','list-unstyled collapse show');
        }

        function deletePost(id,t){
            fetch('<%- url %>:<%- port %>/api/deletePost/' + id, {
                method:'POST',
                credentials: 'include'
            })

            $tr = $(t).closest("tr");

            $tr.remove();


        }
       
    </script>

</html>