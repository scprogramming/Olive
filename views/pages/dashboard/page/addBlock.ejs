    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/public/addPage.css">
    
  </head>

  <body>

    <div class="page-container">
      <div class="content-wrap">
          <div class="row">
              <%- include('../navbar.ejs'); %>
          </div>
          <div class="row">
              <div class="col-2">
                  <%- include('../sidebar.ejs'); %>
              </div>
              <%- content %>

              <button class="btn btn-primary" onclick="saveBlock('<%=pageId%>','<%=url%>', '<%=port%>')">Save</button>
              <button class="btn btn-primary" onclick="redirect('<%=pageId%>')">Exit</button>
          </div>
        </div>
      </div>
                
</body>
<%- scripts %>

<script>
  window.onload = function populateData(event){
    document.querySelector('#pageHeading').value = "Main Header";
    document.querySelector('#pageSubHeading').value = "Subheading";
    document.querySelector('#ctaButtonText').value = "Call to action";

    document.querySelector('#mainHeading').innerHTML = "Main Header";
    document.querySelector('#subHeading').innerHTML = "Subheading";
    document.querySelector('#callToAction').innerHTML = "Call to action";
  }
</script>

</html>